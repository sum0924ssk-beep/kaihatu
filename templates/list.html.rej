<section class="container">
    <h2>登録済みちょみちょみ一覧</h2>

    <div class="list-grid">
    {% for item in condiments %}  <div class="item-card 
            {% if item.is_expired %}expired{% elif item.near_expiry %}near-expiry{% endif %}" 
            data-id="{{ item.id }}" 
            data-name="{{ item.name }}" 
            data-image="{% if item.image_path %}{{ item.image_path }}{% else %}{{ url_for('static', path='/images/no_image.png') }}{% endif %}" 
            data-expiry="{{ item.expiry }}" 
            data-registered="{{ item.registered_date }}"
            onclick="openModal(this)">
            
            <img src="{% if item.image_path %}{{ item.image_path }}{% else %}{{ url_for('static', path='/images/no_image.png') }}{% endif %}" alt="{{ item.name }}">

            <div class="item-info">
                <p>{{ item.name }}</p> 
                <p class="item-date">ID: {{ item.id }}</p>
                <p class="item-date">賞味期限: {{ item.expiry if item.expiry else '未設定' }}</p> 
            </div>
        </div>
    {% endfor %}
    </div>
</section>